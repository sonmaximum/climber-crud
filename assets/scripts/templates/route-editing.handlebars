
{{#each routes as |route|}}
  <div data-id="{{route.id}}">
    <h4 class='route-name' data-id="{{route.id}}">{{route.name}}</h4>
    <small>Logged by:  {{route.user.email}}<br></small>
    <div>
      {{#if route.location}}
        {{route.location.name}}
        {{#if route.location.outdoors}}
        (Outdoors)
        {{else}}
        (Gym)
        {{/if}}<br>
      {{else}}
      (Location removed)<br>
      {{/if}}
      Type:  {{route.route_type}}<br>
      Rating:  {{route.rating}}<br>
      Color:  {{route.color}} <br>
      {{#if route.project}}
      This is a project! <span class="glyphicon glyphicon-fire"></span><br>
      {{/if}}
      {{#if route.sent}}
      Sent!<br>
      {{else if route.completed}}
      Completed with {{route.hangs}} hangs<br>
      {{else if route.attempted}}
        Attempted with {{route.hangs}} hangs<br>
      {{else}} Not yet attempted<br>
      {{/if}}
      <strong>Comments:</strong>  {{route.comments}}<br>
      <button class="route-update btn btn-sm btn-info" data-id={{route.id}}>Update</button>
      <button class="route-delete btn btn-sm btn-danger" data-id={{route.id}}>Delete</button>
    </div>
  </div>

{{else}}

<h2> No matches found</h2>

{{/each}}
