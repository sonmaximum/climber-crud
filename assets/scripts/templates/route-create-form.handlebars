<form id="route-create-form" class="form-horizontal">
  <h3>Log a New Route</h3>
  <fieldset>
    <div class="form-group">
      <label for="createroutename" class= "control-label col-xs-3">Route Name</label>
      <div class="col-xs-9">
        <input required type="text" class='form-control' id="createroutename" name="route[name]" placeholder="Route Name">
      </div>
    </div>
    <div class="form-group">
      <label for="location-dropdown" class= "control-label col-xs-3">Route Location</label>
      <div class="col-xs-9">
        <span class="location-dropdown"> </span>
      </div>
    </div>
    <div class="form-group">
      <label for="createroutetype" class= "control-label col-xs-3">Route Type</label>
      <div class="col-xs-9">
        <select class="form-control" id="createroutetype" name="route[route_type]" form="route-create-form" required>
          <option value="" selected disabled hidden>Route Type</option>
          <option value="0">Boulder</option>
          <option value="1">Top Rope</option>
          <option value="2">Lead</option>
          <option value="3">Sport</option>
          <option value="4">Trad.</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="createroutelocation" class= "control-label col-xs-3">Route Rating</label>
      <div class="col-xs-9">
        <input required type="text" class="form-control" id="createrouterating" name="route[rating]" placeholder="Route Rating">
      </div>
    </div>
    <div class="form-group">
      <label for="createroutecolor" class= "control-label col-xs-3">Route Color</label>
      <div class="col-xs-9">
        <input type="text" class="form-control" id="createroutecolor" name="route[color]" placeholder="Route Color">
      </div>
    </div>
    <div class="form-group">
      <label for="createrouteprogress" class= "control-label col-xs-3">My Progress</label>
      <div class="col-xs-9">
        <select class="form-control" id="createrouteprogress" name="route[progress]" form="route-create-form" required>
          <option value="" selected disabled hidden>My Progress</option>
          <option value="notyetattempted">Not Yet Attempted</option>
          <option value="attempted">Attempted</option>
          <option value="completed">Completed</option>
          <option value="sent">Sent!</option>
        </select>
      </div>
    </div>
    <div class="form-group">
        <label for="createroutehangs" class= "control-label col-xs-3">Number of Hangs</label>
        <div class="col-xs-9">
          <input required type="number" min="0" class="form-control" id="createroutehangs" name="route[hangs]" placeholder="Route Hangs Here">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="createrouteproject" class= "control-label col-xs-3">Mark as Project?</label>
      <div class="col-xs-2">
        <input required type="radio" name="route[project]" value=true >Yes
      </div>
      <div class="col-xs-2">
        <input required type="radio" name="route[project]" value=false >No
      </div>
    </div>
    <div class="form-group">
      <label for="createroutecomments" class= "control-label col-xs-3">Comments</label>
      <div class="col-xs-9">
        <textarea class="form-control" id="createroutecomments" name="route[comments]" placeholder="Comments" rows="3"></textarea>
      </div>
    </div>
    <input required type="submit" class='btn btn-info btn-lg btn-block' value="Log New Route">
  </fieldset>
</form>
