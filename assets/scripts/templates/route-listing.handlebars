
{{#each routes as |route|}}

  <h3 data-id="{{route.id}}"> Name: {{route.name}}</h3>
  <div>
    Rating:  {{route.rating}}
    Location:  {{route.location.name}}
    Type:  {{route.route_type}}
    {{#if route.location.outdoors}}
      Outdoors
    {{else}}
      Gym
    {{/if}}
    {{#if route.attempted}}
      Attempted
    {{/if}}
    {{#if route.completed}}
      Completed
    {{/if}}
    {{#if route.sent}}
      Sent
    {{/if}}
    {{#if route.project}}
      Project
    {{/if}}
    Hangs: {{route.hangs}}
    Color:  {{route.color}}
    Comments:  {{route.comments}}
    Owner:  {{route.user.email}}
  </div>

{{else}}

<h3> No matches found</h3>

{{/each}}
