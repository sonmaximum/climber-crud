<h3> Access Options For All Routes</h3>
<br>
<form id="route-show-by-location-form" class="form-horizontal">
  <fieldset>
    <div class="form-group form-group-lg">
      <div class="col-xs-6">
        <span class="location-dropdown"> </span>
      </div>
      <div class="col-xs-6">
        <input required type="submit" class="btn btn-lg btn-info btn-block" value="Get Routes by Location">
      </div>
    </div>
  </fieldset>
</form>

<br>

<form id="route-show-by-type-form" class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <div class="col-xs-6">
        <select class="form-control input-lg" id="route-show-by-type-select" name="route[route_type]" form="route-show-by-type-form" required>
          <option value="" selected disabled hidden>Route Type</option>
          <option value="0">Boulder</option>
          <option value="1">Top Rope</option>
          <option value="2">Lead</option>
          <option value="3">Sport</option>
          <option value="4">Trad.</option>
        </select>
      </div>
      <div class="col-xs-6">
        <input required type="submit" class="btn btn-lg btn-info btn-block" value="Get Routes by Type">
      </div>
    </div>
  </fieldset>
</form>

<br>

<form id="route-index-form" class="border">
  <fieldset>
    <input required type="submit" class="btn btn-lg btn-block btn-info" value="Get All Routes">
  </fieldset>
</form>
