<h3> Access Options For My Routes</h3>
<br>
<form id="route-my-show-by-location-form" class="form-horizontal">
  <fieldset>
    <div class="form-group form-group-lg">
      <div class="col-xs-6">
        <span class="location-dropdown"> </span>
      </div>
      <div class="col-xs-6">
        <input required type="submit" class="btn btn-lg btn-info btn-block" value="Get My Routes by Location">
      </div>
    </div>
  </fieldset>
</form>

<br>

<form id="route-my-show-by-type-form" class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <div class="col-xs-6">
        <select class="form-control input-lg" id="route-my-show-by-type-select" name="route[route_type]" form="route-my-show-by-type-form" required>
          <option value="" selected disabled hidden>Route Type</option>
          <option value="0">Boulder</option>
          <option value="1">Top Rope</option>
          <option value="2">Lead</option>
          <option value="3">Sport</option>
          <option value="4">Trad.</option>
        </select>
      </div>
      <div class="col-xs-6">
        <input required type="submit" class="btn btn-lg btn-info btn-block" value="Get My Routes by Type">
      </div>
    </div>
  </fieldset>
</form>

<br>

<form id="route-my-show-by-progress-form" class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <div class="col-xs-6">
        <select class="form-control input-lg" id="route-my-show-by-progress-select" name="route[progress]" form="route-my-show-by-progress-form" required>
          <option value="" selected disabled hidden>Progress</option>
          <option value="attempted">Attempted</option>
          <option value="completed">Completed</option>
          <option value="sent">Sent</option>
          <option value="notattempted">Not Attempted</option>
          <option value="notcompleted">Not Completed</option>
          <option value="notsent">Not Sent</option>
        </select>
      </div>
      <div class="col-xs-6">
        <input required type="submit" class="btn btn-lg btn-info btn-block" value="Get Routes By My Progress">
      </div>
    </div>
  </fieldset>
</form>
<br>
<div class='projectbuttons'>
  <button id='projectbutton' class="col-xs-6 btn btn-lg btn-info">Get My Projects</button>
  <button id='nonprojectbutton' class="col-xs-6 btn btn-lg btn-info">Get Other Routes (Non-Project)</button>
</div>

<br>

<form id="route-my-index-form" class="border">
  <fieldset>
    <input required type="submit" class="btn btn-lg btn-block btn-info" value="Get All My Routes (View Edit or Delete)">
  </fieldset>
</form>
